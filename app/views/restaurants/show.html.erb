<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
</div>

<% @reviews.each do |review| %>
  <p><strong>Opinion :</strong> <%= review.content %></p>
  <p><strong>Rate :</strong> <%= review.rating %></p>
<% end %>

<%= link_to 'Add a new review', new_restaurant_review_path(@restaurant) %> <br>

<%= link_to 'Back to restaurants', restaurants_url %>
